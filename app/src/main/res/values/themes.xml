<resources>
    <!-- Base application theme for Material 3 -->
    <style name="Theme.YuuBaca" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/colorBackground</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" >@color/primary_dark</item>

        <!-- Optional: Surface colors, tertiary, background etc. -->
        <!-- You can define more colors here based on your color scheme -->
    </style>

    <!-- Other styles (can remain as-is) -->
    <style name="navbar">
        <item name="android:background">@drawable/rounded</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="setting">
        <item name="android:background">@color/colorBackgroundDarker</item>
    </style>
</resources>
