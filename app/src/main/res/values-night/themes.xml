<resources>

    <!-- Base application theme for Material 3 -->
    <style name="Theme.YuuBaca" parent="Theme.Material3.DayNight">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" >@color/primary_dark</item>
    </style>

    <!-- Other styles -->
    <style name="navbar">
        <item name="android:background">@drawable/roundedd</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="setting">
        <item name="android:background">@color/black</item>
    </style>

</resources>